<Window x:Class="tugas2pv.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:tugas2pv"
        mc:Ignorable="d"
        Title="Calculator" Height="584" Width="420">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBox x:Name="DisplayText" 
                 Grid.Row="0" 
                 Height="80" 
                 FontSize="40" 
                 TextAlignment="Right"
                 VerticalContentAlignment="Center"
                 IsReadOnly="True"
                 Text="0"/>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Content="C" Grid.Row="0" Grid.Column="0" Margin="5" Click="Clear_Click"/>
            <Button Content="CE" Grid.Row="0" Grid.Column="1" Margin="5" Click="ClearEntry_Click"/>
            <Button Content="⌫" Grid.Row="0" Grid.Column="2" Margin="5" Click="Backspace_Click"/>
            <Button Content="/" Grid.Row="0" Grid.Column="3" Margin="5" Click="Operator_Click"/>

            <Button Content="7" Grid.Row="1" Grid.Column="0" Margin="5" Click="Number_Click"/>
            <Button Content="8" Grid.Row="1" Grid.Column="1" Margin="5" Click="Number_Click"/>
            <Button Content="9" Grid.Row="1" Grid.Column="2" Margin="5" Click="Number_Click"/>
            <Button Content="×" Grid.Row="1" Grid.Column="3" Margin="5" Click="Operator_Click"/>

            <Button Content="4" Grid.Row="2" Grid.Column="0" Margin="5" Click="Number_Click"/>
            <Button Content="5" Grid.Row="2" Grid.Column="1" Margin="5" Click="Number_Click"/>
            <Button Content="6" Grid.Row="2" Grid.Column="2" Margin="5" Click="Number_Click"/>
            <Button Content="-" Grid.Row="2" Grid.Column="3" Margin="5" Click="Operator_Click"/>

            <Button Content="1" Grid.Row="3" Grid.Column="0" Margin="5" Click="Number_Click"/>
            <Button Content="2" Grid.Row="3" Grid.Column="1" Margin="5" Click="Number_Click"/>
            <Button Content="3" Grid.Row="3" Grid.Column="2" Margin="5" Click="Number_Click"/>
            <Button Content="+" Grid.Row="3" Grid.Column="3" Margin="5" Click="Operator_Click"/>

            <Button Content="±" Grid.Row="4" Grid.Column="0" Margin="5" Click="ChangeSign_Click"/>
            <Button Content="0" Grid.Row="4" Grid.Column="1" Margin="5" Click="Number_Click"/>
            <Button Content="." Grid.Row="4" Grid.Column="2" Margin="5" Click="Decimal_Click"/>
            <Button Content="=" Grid.Row="4" Grid.Column="3" Margin="5" Click="Equals_Click"/>
        </Grid>
    </Grid>
</Window>